{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": "./src",
        "paths": {
            "@/api/*": ["api/*"],
            "@/config/*": ["config/*"],
            "@/db/*": ["db/*"],
            "@/middlewares/*": ["middlewares/*"],
            "@/types/*": ["types/*"],
            "@/utils/*": ["utils/*"],
            "@/constants/*": ["constants/*"],
            "@/services/*": ["services/*"],
            "@/crons/*": ["crons/*"]
        }
    },
    "include": ["src/**/*.ts", "drizzle.config.ts", "migrations/**/*.ts"],
    "exclude": ["node_modules"]
}
