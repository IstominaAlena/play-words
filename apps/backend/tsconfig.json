{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": "./src",
        "paths": {
            "@/api/*": ["api/*"],
            "@/config/*": ["config/*"],
            "@/db/*": ["db/*"],
            "@/middlewares/*": ["middlewares/*"],
            "@/types/*": ["types/*"],
            "@/utils/*": ["utils/*"],
            "@/constants/*": ["constants/*"],
            "@/services/*": ["services/*"],
            "@/crons/*": ["crons/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
